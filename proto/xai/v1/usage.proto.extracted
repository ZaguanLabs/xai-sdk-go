syntax = "proto3";

package xai_api;

option go_package = "github.com/ZaguanLabs/xai-sdk-go/proto/gen/go/xai/v1;xaiv1";

import "google/protobuf/timestamp.proto";

enum ServerSideTool {
  SERVER_SIDE_TOOL_INVALID = 0;
  SERVER_SIDE_TOOL_WEB_SEARCH = 1;
  SERVER_SIDE_TOOL_X_SEARCH = 2;
  SERVER_SIDE_TOOL_CODE_EXECUTION = 3;
  SERVER_SIDE_TOOL_VIEW_IMAGE = 4;
  SERVER_SIDE_TOOL_VIEW_X_VIDEO = 5;
  SERVER_SIDE_TOOL_COLLECTIONS_SEARCH = 6;
  SERVER_SIDE_TOOL_MCP = 7;
}

message EmbeddingUsage {
  int32 num_text_embeddings = 1;
  int32 num_image_embeddings = 2;
}

message SamplingUsage {
  int32 completion_tokens = 1;
  int32 prompt_tokens = 2;
  int32 total_tokens = 3;
  int32 prompt_text_tokens = 4;
  int32 prompt_image_tokens = 5;
  int32 reasoning_tokens = 6;
  int32 cached_prompt_text_tokens = 7;
  int32 num_sources_used = 8;
  repeated ServerSideTool server_side_tools_used = 9;
}
